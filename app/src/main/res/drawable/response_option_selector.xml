<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        app:state_validated="true"
        app:state_correct="true"
        android:drawable="@drawable/response_option_correct" />

    <item
        app:state_validated="true"
        app:state_correct="false"
        android:drawable="@drawable/response_option_wrong" />

    <item
        android:state_checked="true"
        app:state_validated="false"
        android:drawable="@drawable/response_option_selected" />

    <item
        android:state_checked="false"
        app:state_validated="false"
        android:drawable="@drawable/response_option_normal" />

</selector>